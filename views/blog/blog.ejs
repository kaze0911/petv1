<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head.ejs") %>
</head>
<body>
    <header><%- include("../partials/_nav.ejs") %></header>
    <main>
        <div class="jumbotron">
            <div class="container">
                <h1 class="mb-4">博客文章</h1>
                
                <% article.forEach(articles => { %>
                    <div class="card mt-4">
                        <div calss="card-body">
                            <h4 calss="card-title"><%= articles.title %></h4>
                            <div class="card-text mb-2">文章描述：<%= articles.description %></div>
                            <div class="card-subtitle text-muted mb-2">
                                修改時間：<%= articles.createdAt.toLocaleDateString() %>
                            </div>
                            <form action="blog/<%= articles.id %>" method="get" class="d-lg-inline">
                                <button type="submit" class="btn btn-primary">閱讀全文</button>
                            </form>
                            <form action="/" method="get" class="d-lg-inline">
                                <button type="submit" class="btn btn-secondary">返回主頁</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </main>
    <footer><%- include("../partials/footer.ejs") %></footer>
</body>
</html>