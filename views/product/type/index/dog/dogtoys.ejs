<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../../../../partials/head.ejs") %>
</head>
<body>
    <header><%- include("../../../../partials/_nav.ejs") %></header>
    <main>
        <div class="jumbotron">
            <h1>狗玩具類產品</h1>
            <!-- <form action="/product/new_dtoy" method="get" class="d-lg-inline">
                <button type="submit" class="btn btn-success">創建</button>
            </form> -->
            
            <div class="grid-container mt-4 mb-4">
                <% dogtoy.forEach(dogtoys =>{%>
                    <div class="grid-item mt-2">
                        <div class="card" style="width:400px">
                            <img class="card-img-top mt-4" src="/image/dogtoys.jpg" alt="Card image">
                            <div class="card-body">
                                <h4 class="card-title"><%= dogtoys.name %></h4>
                                <div class="card-subtitle text-muted mb-2">
                                    <%= dogtoys.createdAt.toLocaleDateString() %>
                                </div>
                                <form action="/product/dogtoys/<%= dogtoys.id %>" method="get">
                                    <button type="submit" class="btn btn-primary">Read More</button>            
                                </form>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
            <div class="mt-2">
                <form action="/product/type" method="get" class="d-lg-inline">
                    <button type="submit" class="btn btn-secondary">返回種類</button>
                </form>
                <form action="/product/dog" method="get" class="d-lg-inline">
                    <button type="submit" class="btn btn-secondary">返回狗目錄</button>
                </form>
            </div>
        </div>
    </main>
    <footer><%- include("../../../../partials/footer.ejs") %></footer>
</body>
</html>