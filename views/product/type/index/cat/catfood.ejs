<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../../../../partials/head.ejs") %>
</head>
<body>
    <header><%- include("../../../../partials/_nav.ejs") %></header>
    <main>
        <div class="jumbotron">
            <h1>貓食物類產品</h1>
            <form action="/product/new_cfood" method="get">
                <button type="submit" class="btn btn-success">創建</button>
            </form>
            
            <div class="grid-container mt-4 mb-4">
                <% catfood.forEach(catfoods =>{%>
                    <div class="grid-item mt-2">
                        <div class="card" style="width:400px">
                            <img class="card-img-top mt-4" src="/image/catfood.jpg" alt="Card image">
                            <div class="card-body">
                                <h4 class="card-title"><%= catfoods.name %></h4>
                                <div class="card-subtitle text-muted mb-2">
                                    修改日期：<%= catfoods.createdAt.toLocaleDateString() %>
                                </div>
                                <div class="price-quantity">
                                    <div class="card-text mb-2" style="font-size: 20px;">$<%= catfoods.price %></div>

                                    <div class="buttons mb-2">
                                        <i class="bi bi-dash-lg"></i>
                                        <div class="quantity">0</div>
                                        <i class="bi bi-plus-lg"></i>
                                    </div>
                                </div>
                                <form action="/product/catfood/<%= catfoods.id %>" method="get">
                                    <button type="submit" class="btn btn-primary">Read More</button>            
                                </form>
                            </div> 
                        </div>
                    </div>    
                <% }) %>
            </div>
            <div class="mt-2">
                <form action="/product/type" method="get" class="d-lg-inline">
                    <button type="submit" class="btn btn-secondary">返回種類</button>
                </form>
                <form action="/product/cat" method="get" class="d-lg-inline">
                    <button type="submit" class="btn btn-secondary">返回貓目錄</button>
                </form>
            </div>
        </div>
    </main>
    <footer><%- include("../../../../partials/footer.ejs") %></footer>
</body>
</html>