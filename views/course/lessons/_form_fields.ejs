<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%= course.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group">
    <label for="teacher">Teacher Name</label>
    <input required type="text" name="teacher" id="teacher" class="form-control">
</div>
<div class="form-group">
    <label for="price">Price</label>
    <input required type="number" name="price" id="price" class="form-control">
</div>
<div class="form-group">
    <label for="place">Place</label>
    <input required type="text" name="place" id="place" class="form-control">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"></textarea>
</div>
<a href="/course" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
