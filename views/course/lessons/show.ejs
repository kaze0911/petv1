<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../../partials/head.ejs") %>
</head>
<body>
    <header><%- include("../../partials/_nav.ejs") %></header>
    <main>
        <div class="jumbotron">
            <div class="container">
                <div class="card mt-4">
                    <div class=""card-body>
                        <h4 class="card-title mb-1"><%= course.title %></h4>
                        <div class="card-subtitle text-muted mb-2">
                            <%= course.createdAt.toLocaleDateString() %>
                        </div>
                        <div class="card-text mb-2"><%= course.place %></div>
                        <div class="card-text mb-2"><%= course.teacher %></div>
                        <div class="card-text mb-2"><%= course.price %></div>
                    </div>
                </div>

                <form action="/course" method="get" class="d-lg-inline">
                    <button type="submit" class="btn btn-secondary">回課程列表</button>
                </form>
                <!-- <a href="/course/lessons/edit/<%= course.id %>" class="btn btn-info">Edit</a> -->
    
                
            </div>
        </div>
    </main>
    <footer><%- include("../../partials/footer.ejs") %></footer>
</body>
</html>